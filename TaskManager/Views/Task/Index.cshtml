@model IEnumerable<TaskManager.Model.TaskModel>

<h1>Список задач</h1>

<form method="post" asp-action="Add">
    <input type="text" name="title" placeholder="Новая задача" required />
    <button type="submit">Добавить</button>
</form>

<ul>
    @foreach (var task in Model)
    {
        <li>
            @if (task.IsCompleted)
            {
                <s>@task.Name</s>
            }
            else
            {
                @task.Name
                <a asp-action="Complete" asp-route-id="@task.Id">[Выполнить]</a>
            }
            <a asp-action="Delete" asp-route-id="@task.Id">[Удалить]</a>
        </li>
    }
</ul>
